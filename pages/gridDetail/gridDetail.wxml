<swiper>
	<block wx:for="{{gridData}}"
	       wx:key="index">
		<swiper-item>
			<image src="{{item.sinaUrl}}"
			       mode='aspectFit'/>
			
			<audio src="{{src}}"
			       id="myAudio"></audio>
			<view class="button-wrap">
				<button class="left"
				        type="primary"
				        disabled="true">
					<text class="iconfont icon-lianmengcheliang"></text>
				</button>
				<button class="middle"
				        type="primary"
				        bindtap="audioPlay">
					<text class="iconfont icon-shengyin"></text>
				</button>
				<button class="right"
				        type="primary"
				        disabled="true">
					<text class="iconfont icon-weixin"></text>
				</button>
			</view>
			<view class="page-count">
				<text class="active-page">2</text>
				/
				<text class="total-page">4</text>
			</view>
			
			<view class="name">
				{{item.name}}
			</view>
			<view class='desctription'
			      wx:if="{{item.desctription}}">
				<text>{{item.desctription}}</text>
			</view>
		</swiper-item>
	</block>
</swiper>



